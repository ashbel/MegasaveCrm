@model Megasave.Web.Models.Identity.UserModel
@{
    ViewData["Title"] = "Users";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h4 class="m-0 text-dark">@ViewData["Title"]</h4>
            </div><!-- /.col -->
            <div class="col-sm-6">
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</div>
<!-- /.content-header -->
<section class="content">
    <div class="container-fluid">
        <div class="card ">
            <div class="card-header">
                <h4>Create User</h4>
            </div>
            <div class="card-body">

                <div asp-validation-summary="All" class="text-danger"></div>

                <form method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="FirstName"></label>
                                <input asp-for="FirstName" class="form-control form-control-sm" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="LastName"></label>
                                <input asp-for="LastName" class="form-control form-control-sm" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="Email"></label>
                                <input asp-for="Email" class="form-control form-control-sm" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="PhoneNumber"></label>
                                <input asp-for="PhoneNumber" class="form-control form-control-sm" />
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="Roles" class="control-label"></label>
                                <select asp-for="Roles" class="form-control form-control-sm" asp-items="ViewBag.Roles"></select>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="DepartmentId"></label>
                                <select asp-for="DepartmentId" class="form-control form-control-sm" asp-items="ViewBag.DepartmentId"></select>
                                <span asp-validation-for="DepartmentId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="BranchId" class="control-label"></label>
                                <select asp-for="BranchId" class="form-control form-control-sm" asp-items="ViewBag.BranchId"></select>
                                <span asp-validation-for="BranchId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    @*<div class="row">
                    <div class="col-md-3">
                    <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control form-control-sm" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    </div>
                    <div class="col-md-3">
                    <div class="form-group">
                    <label asp-for="ConfirmPassword"></label>
                    <input asp-for="ConfirmPassword" class="form-control form-control-sm" />
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                    </div>
                    </div>*@

                    <button type="submit" class="btn btn-sm btn-primary col-6">Save</button>
                </form>

            </div>
            <div class="card-footer">
                <a asp-action="Index" class="btn btn-sm btn-secondary">Back To List</a>
            </div>
        </div>
    </div>
</section>